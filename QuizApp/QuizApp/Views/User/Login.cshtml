@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

@*This form posts to the Login action in UserController. Added an anti-forgery token for security.*@
    
<form asp-action="Login" asp-controller="User" method="post">
    @Html.AntiForgeryToken()

    @*Validation summary shows model-level errors like "Invalid username or password"*@
    <div asp-validation-summary="All" class="text-danger"></div>

    @*Div for input of username*@
    <div class="form-group">
        <label for="username">Username</label>
        @*Name must match the action parameter name in the controller*@
        <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" />
    </div>

    @*Div for input of password*@
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Log in</button>
</form>

@*Link to the registration page for new users*@
<p class="mt-3">
    Don't have an account?
    <a asp-controller="User" asp-action="CreateUser">Create one here</a>.
</p>

@section Scripts {
    <!-- Client-side validation scripts (enable instant feedback in the browser) -->
    <partial name="_ValidationScriptsPartial" />
}
